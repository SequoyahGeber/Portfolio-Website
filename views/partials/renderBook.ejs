<script>
  //Next page
  let rendition;
  function Next() {
    rendition.next();
  }
  //Previous page
  function Prev() {
    rendition.prev();
  }
  function renderBook(bookPath) {
    //Destroy the previously rendered book
    if (rendition) {
      rendition.destroy();
      rendition = null;
    }

    let viewer = document.getElementById("viewer");
    viewer.innerHTML = "";
    let bookURL = `https://sequoyahgeber.com/books/${bookPath}`;
    let book = ePub(bookURL);
    rendition = book.renderTo("viewer", {
      method: "default",
      width: "100%",
      height: "100%",
    });
    let displayed = rendition.display();
  }
</script>
